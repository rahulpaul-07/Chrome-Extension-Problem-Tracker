{
  "manifest_version": 3,
  "name": "CP Problem Tracker",
  "version": "1.0",
  "author": "Rahul Paul",
  "description": "A Chrome extension to bookmark and track problems on the MAANG interview prep platform.",
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://maang.in/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://maang.in/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/bookmark.png",
        "assets/delete.png",
        "assets/play.png"
      ],
      "matches": ["https://maang.in/*"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "assets/ext-icon.png",
      "24": "assets/ext-icon.png",
      "32": "assets/ext-icon.png"
    },
    "default_popup": "popup.html",
    "default_title": "CP Problem Tracker"
  }
}